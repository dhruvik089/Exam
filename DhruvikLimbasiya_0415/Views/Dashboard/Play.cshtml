<script>
$(document).ready(function () {
    $("#playButton").on("click", () => {
        var randomNumber = document.getElementsByClassName("randomeNumber")[0];

        // Function to animate the numbers from 1 to 100
        function animateNumbers() {
            var currentNumber = 1;
            var interval = setInterval(function () {
                randomNumber.innerHTML = currentNumber;
                currentNumber++;
                if (currentNumber > 100) {
                    clearInterval(interval);
                    generateRandomNumber();
                }
            }, 20); // Change the interval to control the speed of animation
        }

        // Function to generate and display random number
        function generateRandomNumber() {
            var random = Math.floor(Math.random() * 100) + 1;
            randomNumber.innerHTML = random;

            // AJAX request to update wallet amount
            $.ajax({
                url: "/Dashboard/updateWalletAmount/?id=" + @Session["UserId"] + "&amount=" + random,
                type: "GET",
                success: function (data) {
                    setTimeout(function () { window.location.reload(); }, 1000);
                    if (data == 1) {

                toastr.success('Amount Added Successfully');
                }
                else {
                toastr.error("Sorry, your today's wallet amount is more than 500. You can play the game after 24 hours.");
                }
                }
                });
                }

                // Check if there are free chances
                if (Number(@Session["Chance"]) > 0) {
                animateNumbers(); // Animate numbers from 1 to 100
                } else {
                    if (confirm("Pay 20 for one more play...")) {

                animateNumbers(); // Animate numbers from 1 to 100
                }
                }
                });

                $("#addChance").on("click", () => {
                $.ajax({
                url: '/Dashboard/AddChance?id=' + Number(@Session["UserId"]),
                type: 'GET',
                success: function (data) {
                if (data) {
                toastr.success('Added Chance');
                }
                }
                });
                });
});
</script>
